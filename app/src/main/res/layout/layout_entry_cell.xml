<?xml version="1.0" encoding="utf-8"?>
<jp.eno.android.mytopics.entry.EntryCellView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/entry_cell_vertical_padding"
    android:paddingLeft="@dimen/entry_cell_horizontal_padding"
    android:paddingRight="@dimen/entry_cell_horizontal_padding"
    android:paddingTop="@dimen/entry_cell_vertical_padding">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/entry_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/setting_list_cell_card_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/entry_cell_card_margin"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/entry_cell_image"
                android:layout_width="@dimen/entry_cell_image_width"
                android:layout_height="@dimen/entry_cell_image_height"
                android:layout_marginRight="@dimen/entry_cell_image_margin_right" />

            <TextView
                android:id="@+id/entry_cell_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/entry_cell_text_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</jp.eno.android.mytopics.entry.EntryCellView>